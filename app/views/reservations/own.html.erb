<div class="container">
    <h2 class="mt-4 mb-4">予約済み一覧</h2>
    <table class="table">
        <thead>
            <tr>
                <th>画像</th>
                <th>施設名</th>
                <th>紹介文</th>
                <th>合計料金</th>
                <th>チェックイン</th>
                <th>チェックアウト</th>
                <th>予約確定日時</th>
                <th></th>
            </tr>   
        </thead>

        <tbody>
            <% @reservations.each do |reservation| %>
            
            <tr>
                <td>
                    <% if reservation.room.image? %>
                        <%= image_tag reservation.room.image.url,size:"100x60" %>
                    <% else %>
                        <%= image_tag 'default-image.png',size:"100x60" %>
                    <% end %>
                </td>
                <td><%= link_to reservation.room.roomname, room_path(reservation.room) %></td>
                <td><%= reservation.room.introduction %></td>
                <td><%= reservation.room.price %></td>
                <td><%= reservation.checkin.strftime('%Y/%m/%d') %></td>
                <td><%= reservation.checkout.strftime('%Y/%m/%d') %></td>
                <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
                <td>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle hidden-after" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= image_tag 'three-dots-vertical' %>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><%= link_to "再予約" ,edit_reservation_path(reservation) , class: "dropdown-item" ,method: :get %></li>
                            <li><%= link_to "予約を削除" ,reservation , class: "dropdown-item" ,method: :delete , data: {confirm: "削除しますか？"} %> </li>
                        </ul>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<%= render "shared/footer" %>