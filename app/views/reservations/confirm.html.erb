<div class="container">
    <div class="FormRoomContainer align-items-center">
        <div class="RoomFormContainer">
            <h2 class="ReservationFormTitle mb-4">予約確認</h2>

                <%# <div class="d-grid"> %>
                    <div class="field d-flex justify-content-between mb-3">
                        <p class="ReservationLabel">チェックイン</p>
                        <p><%= @reservation.checkin.to_s(:date_jp) %></p>
                    </div>
                    <div class="field d-flex  justify-content-between mb-3">
                        <p class="ReservationLabel">チェックアウト</p>
                        <p><%= @reservation.checkout.to_s(:date_jp) %></p>
                    </div>
                    <div class="field d-flex  justify-content-between mb-3">
                        <p class="ReservationLabel">日数</p>
                        <p><%= (@reservation.checkout - @reservation.checkin).to_i %>日</p>
                    </div>
                    <div class="field d-flex  justify-content-between mb-3">
                        <p class="ReservationLabel">人数</p>
                        <p><%= @reservation.number %>人</p>
                    </div>
                    <div class="field d-flex  justify-content-between mb-3">
                        <p class="ReservationLabel">合計金額</p>
                        <p><%= @reservation.number * @room.price %>円</p>
                    </div>
                    
                    <div class="actions d-grid gap-3">
                        <%= form_with url:reservations_path , model:@reservation do |f| %>
                        <%= f.hidden_field :checkin %>
                        <%= f.hidden_field :checkout %>
                        <%= f.hidden_field :number %>
                        <%= f.hidden_field :user_id %>
                        <%= f.hidden_field :room_id %>
                        <%= f.hidden_field :created_at %>
                        <%= f.hidden_field :updated_at %>
                        <%= f.submit "予約を確定" ,class:"btn btn-primary p-3"%>
                        <% end %>
                        <%= link_to "キャンセル" , :back, class: "btn btn-light btn-outline-primary p-3" %>
                    </div>
        </div>
    </div>
</div>



<%= render "shared/footer" %>
