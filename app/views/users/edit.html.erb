<div class="container AccountContainer">
    <h2 class="AcconutTitle mb-4">設定</h2>
    <div class="AccountContentsContainer d-grid d-flex justify-content-between">
        <div class="AccountList col-3">
            <ul class="list-group">
                <%= link_to "アカウント",users_show_path, class: "list-group-item list-group-item-action" %>
                <li class="list-group-item list-group-item-primary">プロフィール</li>
            </ul>
        </div>
        <div class="AccountContents col-8">
            <div class="AccountContensTitle border-bottom border-gray d-flex justify-content-between mb-4">
                <div>
                    <h2>プロフィール</h2>
                </div>
                
            </div>
            <%= form_with url:users_profile_path, model:@user do |f| %>
            <%#= render "devise/shared/error_messages", resource: resource %>
                <div class="AccountContent d-flex  align-items-center mb-4">
                    <p class="fw-bold">アイコン画像</p>
                    <div class="d-flex align-items-center gap-3">
                        <% if current_user.image? %>
                            <%= image_tag current_user.image.url, class:"rounded-circle" ,size:"80x80" %>
                        <% else %>
                            <%= image_tag 'default-avatar.png', class:"rounded-circle" ,size:"80x80" %>
                        <% end %>
                        <label type="button" class="btn btn-primary d-flex align-items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                            <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z"/>
                            <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
                            </svg>
                            <span>画像アップロード</span>
                            <%= f.file_field :image ,class: "visually-hidden" %>
                        </label>
                    </div>
                </div>
                <div class="AccountContent d-flex mb-3">
                    <p class="fw-bold">名前</p>
                    <div><%= f.text_field :username, autofocus: true, autocomplete: "username" ,class: "form-control" %></div>
                </div>
                <div class="AccountContent d-flex mb-3">
                    <p class="fw-bold">自己紹介</p>
                    <div><%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" ,class: "form-control" %></div>
                </div>
                <div class="actions gap-3 d-flex justify-content-end">
                    <%= link_to "キャンセル" , users_profile_path, class: "btn btn-light btn-outline-primary p-3", method: :get %>
                    <%= f.submit "保存" ,class:"btn btn-primary p-3"%>
                </div>
            <% end %>
        </div>
    </div>
</div>

<%= render "shared/footer" %>