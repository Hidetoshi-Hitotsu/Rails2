
<div class="FormContainer align-items-center">
  <div class="AccountFormContainer">
    <h2 class="AcconutFormTitle">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="d-grid">
      <div class="field mb-3">
        <%= f.label :"ユーザー名" ,class: "required mb-2" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username" ,class: "form-control",placeholder:"ユーザー名を入力" %>
      </div>


      <div class="field mb-3">
        <%= f.label :email ,class: "required mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control",placeholder:"メールアドレスを入力" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password ,class: "required mb-2" %>
        <% if false%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control",placeholder:"パスワードを入力" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation ,class: "required mb-2" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control",placeholder:"確認用パスワードを入力" %>
      </div>
    </div>
      <div class="actions d-grid gap-3">
        <%= f.submit "新しいアカウントを作成" ,class:"btn btn-primary p-3"%>
        <%= link_to "アカウントをお持ちの方はログイン" , new_user_session_path, class: "btn btn-light btn-outline-primary p-3", method: :get %>
      </div>
    <% end %>

    <div class="d-grid">

    </div>


    <%# 初期設定　= render "devise/shared/links" %>
  </div>
</div>


<%#footerの挿入= render "shared/footer" %>